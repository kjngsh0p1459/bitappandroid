<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_centerInParent="true">

	<android.support.constraint.ConstraintLayout
		android:id="@+id/clMain"
		android:layout_width="@dimen/dimen_400dp"
		android:layout_height="0dp"
		android:layout_centerInParent="true"
		android:alpha="0.85"
		android:background="@color/colorWhite"
		android:orientation="vertical"
		app:layout_constraintDimensionRatio="1:1.5"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:id="@+id/btnCancel"
			android:layout_width="@dimen/dimen_32dp"
			android:layout_height="@dimen/dimen_32dp"
			android:background="@drawable/cancel"
			app:layout_constraintRight_toRightOf="@id/tvVersionApp"
			app:layout_constraintTop_toTopOf="@id/tvVersionApp" />

		<TextView
			android:id="@+id/tvVersionApp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dimen_16dp"
			android:fontFamily="@font/digital_time_bold"
			android:gravity="top|center"
			android:textColor="@color/colorTextLog"
			android:textSize="@dimen/dimen_26dp"
			app:layout_constraintTop_toTopOf="parent" />

		<ListView
			android:id="@+id/lvMainData"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginLeft="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_8dp"
			android:layout_marginRight="@dimen/dimen_16dp"
			android:layout_marginBottom="@dimen/dimen_8dp"
			android:textColor="@color/colorTextLog"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvVersionApp" />
	</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>